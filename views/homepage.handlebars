<main>
  <h2>All Blog Posts:</h2>
  <br />
  <div class="grid justify-center grow">
    {{#each Posts as |Post|}}
      <div
        id={{id}}
        class="mx-20 w-4/5 border-4 border-black-400 hover:shadow-lg grow post"
      >
        <h3 class = "font-black">{{title}}</h3>
        <h4 class = "text-xs">Author: {{User.username}}</h4>
        <h4 class = "text-xs">Created: {{createdAt}}</h4>
        <p>{{content}}</p>
      </div>
      <br />
    {{/each}}
  </div>
</main>

<script src ="/js/homepage.js"></script>